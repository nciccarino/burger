<div class= "container">
  <div class="jumbotron jumbotron-fluid">
    <div class="container">
      <h1 class="display-3">Burger Town</h1>
      <p class="lead">Add and remove Burgers</p>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <h2>Uneaten Burgers!</h2>
      <br>
      <ul>
        {{#each burgers}}
          {{#unless this.devoured}}
            <li>
              {{this.burger_name}} 
              <form action="/{{this.id}}?_method=PUT" method="POST">
                <input type="hidden" name="devoured" value="1">
                <button type="submit">Devour it!</button>
              </form>
              <br>
              {{> burgers/delete-burger}}
            </li>
          {{/unless}}
        {{/each}}
      </ul>
      <br>
    </div>
    <div class="col-md-6">
      <h2>Eaten Burgers!</h2>
      <br>
      <ul>
        {{#each burgers}}
          {{#if this.devoured}}
            <li>
              {{this.burger_name}}
              <br>
              {{> burgers/delete-burger}}
            </li>
          {{/if}}
        {{/each}}
      </ul>
      <br>
    </div>
  </div>
  <div class ="row">
    <div class="col-md-12">
      <h2>Add a Burger</h2>
      <form class="create-update-form" action="/" method="POST">
        <div class="form-group">
          <label for="burger">Burger Name:</label>
          <input type="text" id="burger" name="name">
          <input type="hidden" name="devoured" value="0">
        </div>
        <button type="submit">Add Burger</button>
        <br>
      </form>
    </div>
  </div> 
</div>